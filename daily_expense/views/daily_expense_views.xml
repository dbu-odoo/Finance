<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem name="Expenses" id="menu_expense_expense" sequence="2" web_icon='daily_expense,static/description/icon.png'/>

    <record id="daily_expense_view_tree" model="ir.ui.view">
        <field name="name">daily.expense.tree</field>
        <field name="model">daily.expense</field>
        <field name="arch" type="xml">
            <tree string="Daily Expense" editable="bottom">
                <field name="date"/>
                <field name="expense_category"/>
                <field name="amount" sum="Total Amount"/>
                <field name="mode"/>
                <field name="bank" attrs="{'readonly': [('mode', '=', 'offline')], 'required': [('mode', '=', 'online')]}"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="daily_expense_view_search" model="ir.ui.view">
        <field name="name">daily.expense.search</field>
        <field name="model">daily.expense</field>
        <field name="arch" type="xml">
            <search string="Daily Expense">
                <field name="date"/>
                <field name="expense"/>
                <field name="expense_category"/>
                <field name="mode"/>
                <field name="note"/>
                <filter string="Month" context="{'group_by':'create_date:month'}" name="date"/>
            </search>
        </field>
    </record>

    <record id="daily_expense_action" model="ir.actions.act_window">
        <field name="name">Daily Expenses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">daily.expense</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('user_id','=',uid)]</field>
    </record>

    <menuitem name="Daily Expenses"
        parent="menu_expense_expense"
        sequence="2"
        id="submenu_daily_expense"
        action="daily_expense_action"/>

    <record id="daily_expense_action2" model="ir.actions.act_window">
        <field name="name">Daily Expenses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">daily.expense</field>
        <field name="context">{'search_default_expense': active_id}</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('user_id','=',uid)]</field>
    </record>

    <record id="expense_expense_view_tree" model="ir.ui.view">
        <field name="name">expense.expense.tree</field>
        <field name="model">expense.expense</field>
        <field name="arch" type="xml">
            <tree string="Expenses">
                <field name='year'/>
                <field name="month"/>
                <field name="amount_total"/>
            </tree>
        </field>
    </record>

    <record id="expense_expense_view_form" model="ir.ui.view">
        <field name="name">expense.expense.form</field>
        <field name="model">expense.expense</field>
        <field name="arch" type="xml">
            <form string="Expenses">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name='%(daily_expense_action2)d' type='action'
                            string='Expenses' icon='fa-bars'/>
                    </div>
                    <div class="oe_title oe_inline">
                        <h1>
                            <field name="year" class="oe_inline"/> - 
                            <field name="month" class="oe_inline" placeholder="Month"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="expense_expense_view_kanban" model="ir.ui.view">
        <field name="name">expense.expense.kanban</field>
        <field name="model">expense.expense</field>
        <field name="arch" type="xml">
            <kanban class="o_event_kanban_view" default_group_by="year">
                <field name="year"/>
                <field name="month"/>
                <field name='currency_id'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                    <span class="fa fa-bars fa-lg"/>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.deletable">
                                        <li><a type="delete">Delete</a></li>
                                    </t>
                                </ul>
                            </div>
                            <div class='row'>
                                <div class="col-md-5">
                                    <div class='col-md-12'>
                                        <h2><field name="month"/></h2>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div><h3><field name="amount_total" widget="monetary"/></h3></div>
                                    <div><h3><a name="%(daily_expense_action2)d" type="action" style='font-size: initial;'>Expenses</a></h3></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="expense_expense_action" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">expense.expense</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="domain">[('user_id','=',uid)]</field>
    </record>

    <menuitem name="Expenses"
        parent="menu_expense_expense"
        sequence="1"
        id="submenu_expense_expense"
        action="expense_expense_action"/>

    <record id="expense_category_view_tree" model="ir.ui.view">
        <field name="name">expense.category.tree</field>
        <field name="model">expense.category</field>
        <field name="arch" type="xml">
            <tree string="Expense Category" editable='bottom'>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="expense_category_action" model="ir.actions.act_window">
        <field name="name">Expense Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">expense.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Expense Category"
        parent="menu_expense_expense"
        sequence="2"
        id="submenu_expense_category"
        action="expense_category_action"/>
</odoo>