<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bank_account_view_tree" model="ir.ui.view">
        <field name="name">bank.account.tree</field>
        <field name="model">bank.account</field>
        <field name="arch" type="xml">
            <tree string="Bank Account" editable="bottom">
                <field name="name"/>
                <field name="beneficiary_name"/>
                <field name="account_number"/>
                <field name="ifsc_code"/>
                <field name="branch_name"/>
                <field name="branch_code"/>
            </tree>
        </field>
    </record>

    <record id="bank_account_view_form" model="ir.ui.view">
        <field name="name">bank.account.form</field>
        <field name="model">bank.account</field>
        <field name="arch" type="xml">
            <form string="Bank Account">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline" placeholder="Bank Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="beneficiary_name"/>
                            <field name="account_number"/>
                            <field name="ifsc_code"/>
                        </group>
                        <group>
                            <field name="branch_name"/>
                            <field name="branch_code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bank_account_action" model="ir.actions.act_window">
        <field name="name">Bank Account</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bank.account</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('user_id','=',uid)]</field>
    </record>

    <menuitem name="Bank Account"
        parent="menu_finance"
        sequence="100"
        id="submenu_bank_account"
        action="bank_account_action"/>
</odoo>