<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mutual.fund</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_mutual_fund" widget="upgrade_boolean"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_mutual_fund"/>
                        <div class="text-muted">
                            Fetch latest NAV of mutual funds
                        </div>
                        <div class="content-group" attrs="{'invisible': [('module_mutual_fund','=',False)]}">
                            <div class="row mt16">
                                <label for="mashape_key" class="col-md-4 o_light_label"/>
                                <field name="mashape_key" class="col-md-8 oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
             </xpath>
        </field>
    </record>
</odoo>