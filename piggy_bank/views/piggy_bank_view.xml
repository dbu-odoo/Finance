<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem name="Piggy Bank" id="menu_piggy_bank" sequence="2" web_icon='piggy_bank,static/description/icon.png'/>

    <record id="piggy_bank_view_tree" model="ir.ui.view">
        <field name="name">piggy.bank.tree</field>
        <field name="model">piggy.bank</field>
        <field name="arch" type="xml">
            <tree string="Piggy Bank">
                <field name='bank'/>
                <field name='year'/>
                <field name="month"/>
                <field name="amount_total" sum='Total Amount'/>
            </tree>
        </field>
    </record>

    <record id="piggy_bank_view_form" model="ir.ui.view">
        <field name="name">piggy.bank.form</field>
        <field name="model">piggy.bank</field>
        <field name="arch" type="xml">
            <form string="Piggy Bank">
                <sheet>
                    <group>
                        <field name="bank"/>
                        <field name="year"/>
                        <field name="month"/>
                    </group>
                    <group string='Deposite Lines'>
                        <field name='deposite_lines' nolabel='1'>
                            <tree editable='bottom'>
                                <field name='date'/>
                                <field name='amount' sum='Total Amount'/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="piggy_bank_action" model="ir.actions.act_window">
        <field name="name">Piggy Bank</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">piggy.bank</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Piggy Bank"
        parent="menu_piggy_bank"
        sequence="1"
        id="submenu_piggy_bank"
        action="piggy_bank_action"/>

</odoo>